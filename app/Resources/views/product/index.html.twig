{% extends 'base.html.twig' %}

{% block body %}
    <h1>Products list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Discount</th>
                <th>Color</th>
                <th>Imgsproduct</th>
                <th>Price</th>
                <th>Datecreation</th>
                <th>Size</th>
                <th>Type</th>
                <th>Model</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.discount }}</td>
                <td>{{ product.color }}</td>
                <td>{% if product.imgsProduct %}{{ product.imgsProduct|join(', ') }}{% endif %}</td>
                <td>{{ product.price }}</td>
                <td>{% if product.dateCreation %}{{ product.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ product.size }}</td>
                <td>{{ product.type }}</td>
                <td>{{ product.model }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('product_show', { 'id': product.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('product_edit', { 'id': product.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_new') }}">Create a new product</a>
        </li>
    </ul>
{% endblock %}
